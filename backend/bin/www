#!/usr/bin/env node

/**
 * Module dependencies.
 */

var app = require("../app");
var debug = require("debug")("backend:server");
var http = require("http");
const {Server} = require("socket.io"); // Import socket.io

/**
 * Get port from environment and store in Express.
 */

var port = normalizePort(process.env.PORT || "3000");
app.set("port", port);

/**
 * Create HTTP server.
 */

var server = http.createServer(app);

/**
 * Initialize Socket.io and attach it to the server.
 */
const io = new Server(server, {
    cors: {
        origin: "http://localhost:5173",
        methods: ["GET", "POST"],
    },
});

let projects = {};

// Socket.io event handling
io.on("connection", (socket) => {
    console.log("A user connected:", socket.id);

    socket.on("join", ({projectID, userId, username}) => {
        socket.join(projectID);
        socket.userId = userId; // Store userId on socket for disconnect handling
        socket.username = username || "Anonymous"; // Store username on socket
        socket.projectID = projectID; // Store projectID for disconnect handling
        console.log(`${username || userId} attempting to join room: ${projectID}`);

        if (!projects[projectID]) {
            projects[projectID] = {
                clients: [],
                htmlCode: "<h1>Hello world</h1>",
                cssCode: "body { background-color: #f4f4f4; }",
                jsCode: "// some comment",
            };
        }

        // Check if this is a NEW client joining (not already in the list)
        const isNewClient = !projects[projectID].clients.includes(userId);

        if (isNewClient) {
            projects[projectID].clients.push(userId);
            console.log(`✅ ${username || userId} joined the room: ${projectID}`);

            // Only notify OTHER clients if this is truly a new join
            socket.to(projectID).emit("joined", {clients: projects[projectID].clients, userId, username});
        } else {
            console.log(`♻️ ${username || userId} reconnected to room: ${projectID}`);
        }

        // Send the current code state to the client (whether new or reconnecting)
        socket.emit("sync-code", {
            htmlCode: projects[projectID].htmlCode,
            cssCode: projects[projectID].cssCode,
            jsCode: projects[projectID].jsCode,
        });

        console.log(`Total clients in ${projectID}:`, projects[projectID].clients.length);
    });

    socket.on("code-change", ({projectID, tab, operation}) => {
        if (projects[projectID]) {
            if (tab === "html") projects[projectID].htmlCode = operation.content;
            else if (tab === "css") projects[projectID].cssCode = operation.content;
            else if (tab === "js") projects[projectID].jsCode = operation.content;

            // Broadcast to all clients in the room EXCEPT the sender
            socket.to(projectID).emit("code-update", {tab, operation});
            console.log(`Broadcasting code update for ${tab} in project ${projectID}`);
        }
    });

    socket.on("disconnect", () => {
        console.log("A user disconnected:", socket.id);
        // Remove disconnected client from the project
        if (socket.projectID && socket.userId) {
            const projectID = socket.projectID;
            if (projects[projectID]) {
                const index = projects[projectID].clients.findIndex((client) => client === socket.userId);
                if (index !== -1) {
                    projects[projectID].clients.splice(index, 1);
                    io.to(projectID).emit("user-left", {
                        userId: socket.userId,
                        username: socket.username,
                        clients: projects[projectID].clients,
                    });
                    console.log(`User ${socket.username || socket.userId} left project ${projectID}`);
                }
            }
        }
    });
});

/**
 * Listen on provided port, on all network interfaces.
 */

server.listen(port);
server.on("error", onError);
server.on("listening", onListening);

/**
 * Normalize a port into a number, string, or false.
 */

function normalizePort(val) {
    var port = parseInt(val, 10);

    if (isNaN(port)) {
        // named pipe
        return val;
    }

    if (port >= 0) {
        // port number
        return port;
    }

    return false;
}

/**
 * Event listener for HTTP server "error" event.
 */

function onError(error) {
    if (error.syscall !== "listen") {
        throw error;
    }

    var bind = typeof port === "string" ? "Pipe " + port : "Port " + port;

    // handle specific listen errors with friendly messages
    switch (error.code) {
        case "EACCES":
            console.error(bind + " requires elevated privileges");
            process.exit(1);
            break;
        case "EADDRINUSE":
            console.error(bind + " is already in use");
            process.exit(1);
            break;
        default:
            throw error;
    }
}

/**
 * Event listener for HTTP server "listening" event.
 */

function onListening() {
    var addr = server.address();
    var bind = typeof addr === "string" ? "pipe " + addr : "port " + addr.port;
    debug("Listening on " + bind);
    console.log("Server running on http://localhost:" + addr.port);
    console.log("Socket.IO server ready for connections");
}
